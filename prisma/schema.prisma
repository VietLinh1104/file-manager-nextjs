generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DataType {
  id        Int      @id @default(autoincrement())
  name      String   @unique // tên BO duy nhất
  fields    Field[] // các field thuộc về BO này
  createdAt DateTime @default(now())

  // Các field từ BO khác tham chiếu tới BO này
  referencedBy Field[] @relation("FieldRefBO")
}

model Field {
  id       Int     @id @default(autoincrement())
  name     String
  type     String // "string" | "number" | "boolean" | "Date" | tên BO khác
  required Boolean

  // Field này thuộc về DataType nào
  dataType   DataType @relation(fields: [dataTypeId], references: [id], onDelete: Cascade)
  dataTypeId Int

  // Field này có thể tham chiếu tới 1 BO khác
  refBO   DataType? @relation("FieldRefBO", fields: [refBOId], references: [id])
  refBOId Int?
}
