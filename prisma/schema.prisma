generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DataType {
  id        Int      @id @default(autoincrement())
  name      String
  fields    Field[]
  createdAt DateTime @default(now())
}

model Field {
  id         Int      @id @default(autoincrement())
  name       String
  type       String
  required   Boolean
  dataType   DataType @relation(fields: [dataTypeId], references: [id])
  dataTypeId Int
}
