generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DataType {
  id        Int      @id @default(autoincrement())
  name      String   @unique // tÃªn BO duy nháº¥t
  fields    Field[]
  createdAt DateTime @default(now())

  // CÃ¡c field tá»« BO khÃ¡c tham chiáº¿u tá»›i BO nÃ y
  referencedBy Field[] @relation("FieldRefBO")

  tsFilePath  String?   // Ä‘Æ°á»ng dáº«n file type Ä‘Ã£ generate
}


model Field {
  id       Int     @id @default(autoincrement())
  name     String
  type     String
  required Boolean
  isList   Boolean @default(false)   // ğŸ‘ˆ thÃªm dÃ²ng nÃ y

  dataType   DataType @relation(fields: [dataTypeId], references: [id], onDelete: Cascade)
  dataTypeId Int

  refBO   DataType? @relation("FieldRefBO", fields: [refBOId], references: [id])
  refBOId Int?
}
